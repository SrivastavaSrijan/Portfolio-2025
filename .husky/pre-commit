#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run lint-staged to format and lint files that are being committed
echo "⚙️ Running lint-staged (Biome lint & format)..."
yarn lint-staged || { echo "❌ Lint-staged failed" && exit 1; }

# Run TypeScript type checking on the entire project
echo "📝 Running TypeScript type checking..."
yarn tsc --noEmit || { echo "❌ TypeScript check failed" && exit 1; }


echo "✅ All pre-commit checks passed!"
