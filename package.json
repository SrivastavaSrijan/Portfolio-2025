{
  "name": "portfolio",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --port 3002",
    "dev:codegen": "concurrently --names \"NEXT,CODEGEN\" --prefix-colors \"blue,green\" \"yarn dev\" \"sleep 10 && yarn codegen:watch\"",
    "build": "next build",
    "start": "next start",
    "codegen": "graphql-codegen --config codegen.ts",
    "codegen:watch": "graphql-codegen --watch --config codegen.ts",
    "format": "biome format --write",
    "update": "PAYLOAD_CONFIG_PATH=src/payload.config.ts payload generate:types yarn payload generate:types && yarn payload generate:importmap",
    "payload": "PAYLOAD_CONFIG_PATH=src/payload.config.ts payload",
    "precommit": "biome lint --fix && yarn tsc",
    "prepare": "husky",
    "analyze": "ANALYZE=true yarn build"
  },
  "dependencies": {
    "@apollo/client": "^3.13.6",
    "@apollo/client-integration-nextjs": "^0.12.1",
    "@bprogress/next": "^3.2.11",
    "@graphql-yoga/render-graphiql": "^5.13.3",
    "@payloadcms/db-vercel-postgres": "^3.33.0",
    "@payloadcms/next": "^3.33.0",
    "@payloadcms/payload-cloud": "^3.33.0",
    "@payloadcms/plugin-seo": "3.33.0",
    "@payloadcms/richtext-lexical": "^3.33.0",
    "@payloadcms/storage-vercel-blob": "^3.33.0",
    "@radix-ui/react-accordion": "^1.2.3",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@vercel/speed-insights": "^1.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "embla-carousel-react": "^8.6.0",
    "graphql": "^16.8.1",
    "lodash": "^4.17.21",
    "lucide-react": "^0.487.0",
    "motion": "^12.6.3",
    "next": "^15.3.5",
    "next-themes": "^0.4.6",
    "payload": "^3.33.0",
    "prismjs": "^1.30.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.2.0",
    "tw-animate-css": "^1.2.5",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.5",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-operations": "^4.6.0",
    "@graphql-codegen/typescript-react-apollo": "^4.3.2",
    "@next/bundle-analyzer": "^15.3.5",
    "@parcel/watcher": "^2.5.1",
    "@tailwindcss/postcss": "^4",
    "@types/lodash": "^4.17.17",
    "@types/node": "^20",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.1.2",
    "dotenv": "^17.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "plaiceholder": "^3.0.0",
    "tailwindcss": "^4",
    "tsx": "^4.20.3",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "biome lint --apply",
      "biome format --write"
    ]
  },
  "packageManager": "yarn@4.9.2"
}
